extends layout

block content
    script.
      $('body').css("background", "url(images/pattern.png) repeat fixed center");
    .container-fluid
      .row
        .col-md-4.col-md-offset-4(style="background-color: white; -webkit-box-shadow: 0px 3px 64px -26px rgba(0,0,0,0.75); -moz-box-shadow: 0px 3px 64px -26px rgba(0,0,0,0.75); box-shadow: 0px 3px 64px -26px rgba(0,0,0,0.75);")
          #logo(style='width: 100%; height: auto;')
            a(href="/")
              img(src='images/logo.png', width='100%', height='auto')
          form(id="rejestracja-form", role='form', enctype="multipart/form-data")
            h2.custom-font.text-center Zarejestruj się
            .input-group(style='margin: 10px 0;')
              span.input-group-addon(style='')
                span.glyphicon.glyphicon-user(aria-hidden="true")
                //|  Nazwa użytkownika
              input#first_name.form-control(type='text', name='username', placeholder='Nazwa użytkownika')
                  
            .input-group(style='margin: 10px 0;')
              span.input-group-addon(style='')
                span.glyphicon.glyphicon-earphone(aria-hidden="true")
                //|  Numer telefonu
              input#last_name.form-control(type='text', name='telefon', placeholder='Numer telefonu')

            .input-group(style='margin: 10px 0;')
              span.input-group-addon(style='')
                span.glyphicon.glyphicon-envelope(aria-hidden="true")
                //|  Adres email
              input#email.form-control(type='email', name='email', placeholder='Adres email')

            .input-group(style='margin: 10px 0;')
              span.input-group-addon(style='')
                span.glyphicon.glyphicon-lock(aria-hidden="true")
                //|  Hasło
              input#password.form-control(type='password', name='password', placeholder='Hasło')

            .input-group(style='margin: 10px 0;')
              span.input-group-addon(style='')
                span.glyphicon.glyphicon-lock(aria-hidden="true")
                //|  Potwierdź hasło
              input#password_confirmation.form-control(type='password', name='password_confirmation', placeholder='Potwierdź hasło')

            .input-group(style='margin: 10px 0;')
              span.input-group-addon(style='')
                span.glyphicon.glyphicon-picture(aria-hidden="true")
                //|  Twój awatar
              div.form-control.awatar-input
                input(id="awatar", type='file', name='awatar', accept='image/*', data-multiple-caption="{count} wybrany plik")
                label#awatar-label.btn.btn-info(for="awatar") 
                  span.glyphicon.glyphicon-save(aria-hidden="true") 
                  |  Wybierz plik
                .awatar-preview.pull-right
                  img.img-responsive.img-thumbnail(src='', alt='')
              
            button.btn.btn-lg.btn-primary.btn-block(type='submit', style="margin: 10px 0") Zarejestruj
        .col-md-4.col-md-offset-4.text-right 
          a(href="/", style='display: block; margin-bottom: 10px;') Wróć na stronę główną

    
      


