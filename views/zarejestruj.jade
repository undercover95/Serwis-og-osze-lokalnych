extends layout

block content
    .container
      .row.centered-form
        .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
         #logo(style='width: 100%; height: auto;')
           img(src='images/logo.png', width='100%', height='auto')
          .panel.panel-default
            .panel-heading
              h3.panel-title Zarejestruj się
            .panel-body
              form(role='form', action='/zarejestruj', method='POST')
                .row
                  .col-xs-6.col-sm-6.col-md-6
                    .form-group
                      input#first_name.form-control.input-sm(type='text', name='username', placeholder='Nazwa użytkownika')
                  .col-xs-6.col-sm-6.col-md-6
                    .form-group
                      input#last_name.form-control.input-sm(type='text', name='telefon', placeholder='Numer telefonu')
                .form-group
                  input#email.form-control.input-sm(type='email', name='email', placeholder='Adres email')
                .row
                  .col-xs-6.col-sm-6.col-md-6
                    .form-group
                      input#password.form-control.input-sm(type='password', name='password', placeholder='Hasło')
                  .col-xs-6.col-sm-6.col-md-6
                    .form-group
                      input#password_confirmation.form-control.input-sm(type='password', name='password_confirmation', placeholder='Potwierdź hasło')
                input.btn.btn-info.btn-block(type='submit', value='Zarejestruj')
                
              if powiadomienie != null
                div.alert.alert-success(role="alert")
                  #{powiadomienie}

