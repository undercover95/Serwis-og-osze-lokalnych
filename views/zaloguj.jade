extends layout

block content
  .container
    form.form-signin(action='/zaloguj', method='POST')
      #logo(style='width: 100%; height: auto;')
        img(src='images/logo.png', width='100%', height='auto')
      h2.form-signin-heading Zaloguj się
      label.sr-only(for='inputEmail') Nazwa użytkownika
      input#inputEmail.form-control(type='username', name='username', placeholder='Nazwa użytkownika', required='', autofocus='')
      label.sr-only(for='inputPassword') Haslo
      input#inputPassword.form-control(type='password', name='password', placeholder='Hasło', required='')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Zaloguj
